@model IEnumerable<MyMoneyManager.Models.Movimenti>

@{
    ViewBag.Title = "Index";
}

<div class="row animated fadeInRight">
    <div class="col-md-12">

        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="portlet box yellow">
            <div class="portlet-body">
                <table id="example" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                               DataValuta
                            </th>
                            <th>
                                Importo
                            </th>
                            <th>
                                Descrizione
                            </th>
                            <th>
                                Causale
                            </th>
                            <th>
                                Descrizione
                            </th>
                            <th>
                                ContiCorrente
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <thead class="filters">
                        <tr>
                            <th>
                                DataValuta
                            </th>
                            <th>
                                Importo
                            </th>
                            <th>
                                Descrizione
                            </th>
                            <th>
                                Causale
                            </th>
                            <th>
                                Descrizione
                            </th>
                            <th>
                                ContiCorrente
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Where(q => q.IDCategoriaIphase < 0))
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.DataValuta)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Importo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Descrizione)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Causale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategorieIphase.Descrizione)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContiCorrente.Descrizione)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                DataValuta
                            </th>
                            <th>
                                Entrate: @Html.DisplayFor(model => model.Where(q => q.Importo > 0).Sum(q => q.Importo).Value)
                                <br />
                                Uscite: @Html.DisplayFor(model => model.Where(q => q.Importo < 0).Sum(q => q.Importo).Value)
                            </th>
                            <th>
                                Descrizione
                            </th>
                            <th>
                                Causale
                            </th>
                            <th>
                                Categoria
                            </th>
                            <th>
                                ContiCorrente
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        // Setup - add a text input to each footer cell
        $('#example .filters th').each(function () {
            var title = $(this).text().trim();
            $(this).html('<input type="text" placeholder="Search ' + title + '" />');
        });

        // DataTable
        var table = $('#example').DataTable();

        // Apply the search
        table.columns().eq(0).each(function (colIdx) {
            $('input', $('.filters th')[colIdx]).on('keyup change', function () {
                table
                    .column(colIdx)
                    .search(this.value)
                    .draw();
            });
        });
    });
</script>

