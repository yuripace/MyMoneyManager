@model IEnumerable<MyMoneyManager.Models.Movimenti>

@{
    ViewBag.Title = "Index";
}

<div class="row animated fadeInRight">
    <div class="col-md-12">

        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <div class="portlet box yellow">
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover dataTables-example" id="sample_2">
                    <thead>
                        <tr>
                            <th width=1%>

                            </th>
                            <th width=5%>
                                @Html.DisplayNameFor(model => model.DataValuta)
                            </th>
                            <th width=5%>
                                @Html.DisplayNameFor(model => model.Importo)
                            </th>
                            <th width=50%>
                                @Html.DisplayNameFor(model => model.Descrizione)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Causale)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategorieIphase.Descrizione)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th width=1%>

                                </th>
                                <td  width=5%>
                                    @Html.DisplayFor(modelItem => item.DataValuta)
                                </td>
                                <td width=5%>
                                    @Html.DisplayFor(modelItem => item.Importo)
                                </td>
                                <td width=50%>
                                    @Html.DisplayFor(modelItem => item.Descrizione)
                                </td>
                                <td  width=1%>
                                    @Html.DisplayFor(modelItem => item.Causale)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CategorieIphase.Descrizione)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.DataValuta)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Importo)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Descrizione)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Causale)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CategorieIphase.Descrizione)
                            </th>
                            <th></th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('.dataTables-example').DataTable({
            pageLength: 10,
            responsive: true,
            dom:
                "<'row'<'col-sm-3'l><'col-sm-6 text-center'B><'col-sm-3'f>>" +
                "<'row'<'col-sm-12'tr>>" +
                "<'row'<'col-sm-5'i><'col-sm-7'p>>",
            buttons: [
                {
                    extend: 'copy',
                    exportOptions: {
                        columns: [1, 2, 3, 4, 5, 6, 7]
                    }
                },
                {
                    extend: 'csv',
                    exportOptions: {
                        columns: [1, 2, 3, 4, 5, 6, 7]
                    }
                },
                {
                    extend: 'excel',
                    title: 'ElencoAccessi',
                    exportOptions: {
                        columns: [1, 2, 3, 4, 5, 6, 7]
                    }
                },
                {
                    extend: 'pdf', title: 'ElencoAccessi',
                    exportOptions: {
                        columns: [1, 2, 3, 4, 5, 6, 7]
                    }
                },

                {
                    extend: 'print',
                    customize: function (win) {
                        $(win.document.body).addClass('white-bg');
                        $(win.document.body).css('font-size', '10px');

                        $(win.document.body).find('table')
                            .addClass('compact')
                            .css('font-size', 'inherit');
                    }
                }
            ],
            columnDefs: [{
                'targets': 0,
                'searchable': false,
                'orderable': false,
                'className': 'dt-body-center',
                'render': function (data, type, full, meta) {
                    return '<input type="checkbox" name="id[]" value="' + $('<div/>').text(data).html() + '">';
                }
            }],

        });

    });

    $('body').on('change', '#mass_select_all', function () {
        var rows, checked;
        rows = $('#dataTables-example').find('tbody tr');
        checked = $(this).prop('checked');
        $.each(rows, function () {
            var checkbox = $($(this).find('td').eq(0)).find('input').prop('checked', checked);
        });
    });

    var del = function (id) {
        var txt;
        var r = confirm("Cancellare l'accesso selezionato?");
        if (r == true) {
            $.ajax({
                url: '..\/..\/server_side/cancellarecord.php?ID=' + id,
                type: 'POST',
                data: { id: id },
                success: function (data) {
                    console.log(data); // Inspect this in your console
                }
            });
        }
    }
</script>

